-- Create Tables
CREATE TABLE Brand (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    description varchar(255) NOT NULL,
    title varchar(255) NOT NULL
);

CREATE TABLE Customer (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    created_date timestamp NOT NULL,
    email varchar(255) NOT NULL UNIQUE,
    firstname varchar(255) NOT NULL,
    lastname varchar(255) NOT NULL,
    password varchar(3000) NOT NULL,
    phone_number varchar(255) NOT NULL,
    username varchar(255) NOT NULL UNIQUE
);

CREATE TABLE Cart (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    total_price double precision NOT NULL,
    customer_id bigint REFERENCES Customer(id)
);

CREATE TABLE Category (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    description varchar(255) NOT NULL,
    name varchar(255) NOT NULL
);

CREATE TABLE Product (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    created_date timestamp NOT NULL,
    description varchar(255) NOT NULL,
    likes integer,
    price varchar(255) NOT NULL,
    title varchar(255) NOT NULL,
    brand_id bigint REFERENCES Brand(id),
    category_id bigint REFERENCES Category(id)
);

CREATE TABLE Product_likes_users (
    product_id bigint REFERENCES Product(id),
    likes_users varchar(255)
);

CREATE TABLE Color (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    hex_code varchar(255) NOT NULL,
    name varchar(255) NOT NULL
);

CREATE TABLE Image_product (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    url varchar(255) NOT NULL,
    product_id bigint REFERENCES Product(id)
);

CREATE TABLE Image_profile (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    customer_id bigint,
    image bigint
);

CREATE TABLE Order_Product (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    created_date timestamp NOT NULL,
    status varchar(255) NOT NULL,
    customer_id bigint REFERENCES Customer(id)
);

CREATE TABLE Payment (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    amount numeric(19,2) NOT NULL ,
    created_date timestamp NOT NULL,
    payment_type varchar(255) NOT NULL,
    status varchar(255) NOT NULL,
    order_product_id bigint REFERENCES Order_Product(id)
);

CREATE TABLE Promotion (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    description varchar(255) NOT NULL,
    title varchar(255) NOT NULL,
    discount_percent integer NOT NULL
);

CREATE TABLE Review (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    created_date timestamp NOT NULL,
    message text NOT NULL,
    user_id bigint NOT NULL,
    username varchar(255) NOT NULL,
    product_id bigint REFERENCES Product(id)
);

CREATE TABLE Size (
    id bigint GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    title varchar(255) NOT NULL
);


ALTER TABLE Customer
    ADD COLUMN cart_id bigint REFERENCES Cart(id);
ALTER TABLE Order_Product
    ADD COLUMN payment_id bigint REFERENCES Payment(id);

CREATE TABLE Cart_products (
    carts_id bigint NOT NULL REFERENCES Cart(id),
    products_id bigint NOT NULL REFERENCES Product(id)
);

CREATE TABLE Color_products (
    colors_id bigint NOT NULL REFERENCES Color(id),
    products_id bigint NOT NULL REFERENCES Product(id)
);

CREATE TABLE Order_product_products (
    order_products_id bigint NOT NULL REFERENCES Order_Product(id),
    products_id bigint NOT NULL REFERENCES Product(id)
);

CREATE TABLE Promotion_products (
    promotions_id bigint NOT NULL REFERENCES Promotion(id),
    products_id bigint NOT NULL REFERENCES Product(id)
);

CREATE TABLE Size_products (
    sizes_id bigint NOT NULL REFERENCES Size(id),
    products_id bigint NOT NULL REFERENCES Product(id)
);

CREATE TABLE User_role (
    user_id bigint REFERENCES Customer(id),
    roles integer
);



